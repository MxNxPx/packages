{
    "enabled": true,
    "forkProcessing": "enabled",
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "timezone": "America/Denver",
    "repositories": ["defenseunicorns/packages"],
    "rebaseStalePrs": true,
    "schedule": ["before 3pm every weekday"],
    "dependencyDashboard": true,
    "commitMessageSuffix": "[ci-skip]",
    "platform": "github",
    "onboarding": false,
    "requireConfig": false,
    "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
    "rebaseWhen": "conflicted",
    "commitBodyTable": true,
    "ignorePaths": ["archive/**"],
    "suppressNotifications": ["prIgnoreNotification"],
    "packageRules": [
      {
        "datasources": ["docker"],
        "commitMessageTopic": "OCI image {{depName}}",
        "commitMessageExtra": "to {{#if isSingleVersion}}v{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}",
        "enabled": true,
        "separateMinorPatch": false
      }
    ]
  }